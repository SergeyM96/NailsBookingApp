<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
   android:background="@drawable/sign_in"
    android:orientation="vertical"
    tools:context=".Pages.LoginActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="600dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:background="#A6EDE2E2"
        android:backgroundTint="#C1EBDBDB"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="#0FD9D1D1"
            android:backgroundTint="@color/teal_700"
            android:shadowColor="@color/cardview_light_background"
            android:text="כניסת משתמש "
            android:textColor="@color/purple_200"
            android:textSize="30sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/etUserName"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="120dp"
            android:hint="שם משתמש"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColorHint="@color/white"
            android:textSize="20sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:hint="סיסמה"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColorHint="@color/white"
            android:textSize="20sp"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100dp">

            <Button
                android:id="@+id/buttonSignUp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:backgroundTint="#1C3F15"
                android:text="הרשמה " />

            <Button
                android:id="@+id/buttonOk"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="50dp"
                android:backgroundTint="#1C3F15"
                android:text="כניסה" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>